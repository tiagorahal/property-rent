<div class="d-flex flex-column justify-content-between align-items-end" style="width: 100%; height: 60vh; background-image:linear-gradient(to bottom, rgba(0, 0, 0, 0) 0%, rgba(0, 0, 0, 1) 100%), url(<%= rails_blob_url(@property.pictures[2]) %>); background-position: center; background-repeat: no-repeat; background-size: cover;">
  <%= link_to "Edit", edit_property_path(@property), class:"btn btn-secondary m-1 align-self-start" %>

  <div class="text-white align-self-start mx-5 pb-2" style="width: 25rem; margin: 0 0 1vh 1vh">    
    <div class="">
      
      <h5 class="text-capitalize card-title pt-1">
        <%= @property.name %>
      </h5>
      <h4 class="text-capitalize">
        <%= @property.address %>
      </h4>
      <p class="card-text">
        <i class="bi bi-door-closed"></i>
        <%= @property.rooms %>
        Bed
        &nbsp;
        &nbsp;
        <i class="bi bi-bag"></i>
        <%= @property.bathrooms %>
        Bath
        &nbsp;
        &nbsp;
        <i class="bi bi-house"></i>
        <%= rand(50...190) %>
        sqm
        &nbsp;
        &nbsp;
        <i class="bi bi-cone-striped"></i>
        <%= rand(1...4) %>
        Parking Slot
      </p>
      
    </div>
  </div>


</div>
<div class="sidenav">
  <a href="#about">About</a>
  <a href="#services">Services</a>
  <a href="#clients">Clients</a>
  <a href="#contact">Contact</a>
</div>
