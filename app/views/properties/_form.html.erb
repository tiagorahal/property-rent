
  <%= form_with(model: property) do |form| %>
    <% if property.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(property.errors.count, "error") %> prohibited this property from being saved:</h2>

        <ul>
          <% property.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mt-3">
      <%= form.text_field :name, placeholder: 'Property Name' %>
    </div>

    <div class="mt-3">
      <%= form.text_field :address, placeholder: 'Address' %>
    </div>

    <div class="mt-3">
      <%= form.number_field :rooms, placeholder: 'Rooms' %>
    </div>

    <div class="mt-3">
      <%= form.number_field :bathrooms, placeholder: 'Bathrooms' %>
    </div>

    <div class="mt-3">
      <%= form.number_field :price, placeholder: 'Price' %>
    </div>

    <div class="mt-3">
      <%= form.file_field :pictures, multiple: true %>
    </div>

    <div class="mt-3">
      <%= form.submit %>
    </div>
  <% end %>

